{
  "templateMappings": [
    {
      "name": "React Components",
      "sourceFolder": "/react/components/",
      "destinationFolder": "/build/src/components/",
      "extension": ".jsx",
      "templates": [
        "InputField",
        "KeyValuePair",
        "RecursiveKeyValuePair",
        "Alert",
        "HeroSection",
        "SearchBar",
        "Button",
        "CardSection",
        "Card",
        "Table",
        "LoadingModal",
        "NoContent"
      ]
    },
    {
      "name": "React Common",
      "sourceFolder": "/react/common/",
      "destinationFolder": "/build/src/common/",
      "extension": ".js",
      "templates": [
        "Utils",
        "ClientAPIWrapper"
      ]
    },
    {
      "name": "CSS Components",
      "sourceFolder": "/css/components/",
      "destinationFolder": "/styles/components/",
      "extension": ".css",
      "templates": [
        "InputField",
        "KeyValuePair",
        "Alert",
        "HeroSection",
        "SearchBar",
        "Button",
        "CardSection",
        "NavBar",
        "Form",
        "Card",
        "Table",
        "LoadingModal",
        "NoContent"
      ]
    },
    {
      "name": "CSS Common",
      "sourceFolder": "/css/common/",
      "destinationFolder": "/styles/",
      "extension": ".css",
      "templates": [
        "App",
        "index"
      ]
    },
    {
      "name": "Project Templates",
      "sourceFolder": "/project/",
      "destinationFolder": "/",
      "extension": "",
      "templates": [
        "openapi.yaml",
        "pages.xml",
        ".env"
      ]
    },
    {
      "name": "React Auth",
      "sourceFolder": "/react/auth/",
      "destinationFolder": "/build/src/auth/",
      "extension": ".jsx",
      "templates": [
        "AuthProvider",
        "RequireAuth"
      ]
    },
    {
      "name": "React Pages",
      "sourceFolder": "/react/pages/",
      "destinationFolder": "/build/src/pages/",
      "extension": ".jsx",
      "templates": [
        "Login"
      ]
    },
    {
      "name": "CSS Pages",
      "sourceFolder": "/css/pages/",
      "destinationFolder": "/styles/pages/",
      "extension": ".css",
      "templates": [
        "Login"
      ]
    },
    {
      "name": "Assets",
      "sourceFolder": "/assets/",
      "destinationFolder": "/build/src/assets/",
      "extension": "",
      "templates": [
        "google-logo.png"
      ]
    }
  ]
}
